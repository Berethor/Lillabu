<Window x:Class="Lilabu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vies="clr-namespace:Lilabu.Views"
        xmlns:viewModels="clr-namespace:Lilabu.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
        Title="{Binding Path=Title}" 
        Height="450" Width="800"
        mc:Ignorable="d">
    <Grid Margin="5 5 5 0">
        <Grid.Resources>
            <Style TargetType="GroupBox">
                <Setter Property="Margin" Value="5 0 5 5"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Исходные данные:">
            <vies:FileLoader DataContext="{Binding Path=FileLoaderVm}" />
        </GroupBox>
        <GridSplitter Grid.Column="0" Width="10" Background="White" Margin="0 0 -5 0"/>
        <GroupBox Header="Карта маршрута:" Grid.Column="1">
            <vies:TraceMap DataContext="{Binding Path=TraceMapVm}" />
        </GroupBox>
    </Grid>
</Window>
